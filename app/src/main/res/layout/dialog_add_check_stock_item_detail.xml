<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kebon Agung Gula Pasir 1kg" />

        <include
            android:id="@+id/include_on_platform_header"
            layout="@layout/view_collapsable_header_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_name" />

        <View
            android:id="@+id/separator_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            android:background="@color/grey_20"
            app:layout_constraintTop_toBottomOf="@id/include_on_platform_header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:minHeight="100dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/include_off_platform_header"
            app:layout_constraintHeight_default="wrap"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/separator_1"
            tools:itemCount="1"
            tools:listitem="@layout/item_add_check_stock_order_container" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/recycler_view_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="recycler_view" />

        <include
            android:id="@+id/include_off_platform_header"
            layout="@layout/view_collapsable_header_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@id/separator_2"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_barrier" />

        <View
            android:id="@+id/separator_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="14dp"
            android:background="@color/grey_20"
            app:layout_constraintBottom_toTopOf="@id/include_off_platform_item" />

        <include
            android:id="@+id/include_off_platform_item"
            layout="@layout/item_add_check_stock_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/separator_3" />

        <View
            android:id="@+id/separator_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            android:background="@color/grey_20"
            app:layout_constraintBottom_toTopOf="@id/btn_ok" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@color/orange50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

