<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp">

    <View
        android:id="@+id/view_detail_label"
        android:layout_width="2dp"
        android:layout_height="29dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_half_rounded_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_regular"
        android:text="Order ID:"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_order_id_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="41234" />

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/inter_regular"
        android:text="12 Des 2022, 17:40 WIB"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/grey_60"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_id_label" />

    <include
        android:id="@+id/include_order_detail"
        layout="@layout/item_add_check_stock_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_date" />

</androidx.constraintlayout.widget.ConstraintLayout>