<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.kitabeli.ae.ui.home.HomeViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:background="@android:color/white"
        tools:context=".ui.BarcodeScanningActivity">


        <androidx.camera.view.PreviewView
            android:layout_height="match_parent"
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:foreground="@drawable/bg_qrcode_background" />

        <ImageView
            android:layout_height="match_parent"
            android:layerType="software"
            android:id="@+id/overlay"
            android:src="@drawable/bg_qrcode_background"
            android:layout_width="match_parent"
            android:visibility="gone" />
        <maulik.barcodescanner.ui.custom.ViewFinderOverlay
            android:layout_height="match_parent"
            android:layerType="software"
            android:layout_width="match_parent"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/dimen_thirty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_marginTop="@dimen/dimen_twenty"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_white"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/dimen_twenty"
                android:padding="@dimen/dimen_five"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_xlarge"
                android:layout_marginStart="@dimen/dimen_twenty"
                android:text="@string/title_qr_code"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_back"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/iv_back" />

            <TextView
                android:layout_marginTop="@dimen/dimen_three"
                android:id="@+id/tv_subtitle"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                android:text="@string/subtitle_qr_code"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>