<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KitabeliAE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange60</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- <item name="editTextStyle">@style/Style.KitabeliAE.EditText</item>-->
        <item name="materialButtonStyle">@style/Widget.KitabeliAE.MaterialButton</item>
        <!--        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.YourApp.BottomSheetDialog</item>-->
    </style>

    <style name="Theme.KitabeliAE" parent="Base.Theme.KitabeliAE" />


    <style name="Style.KitabeliAE.EditText" parent="">
        <item name="android:textAppearance">@style/TextAppearanceOverlay.KitabeliAE.EditText</item>
        <item name="background">@drawable/bg_text_filed</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="TextAppearanceOverlay.KitabeliAE.EditText" parent="">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Widget.KitabeliAE.MaterialButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceCornerExtraSmall</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.YourApp.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">
            @style/Animation.MaterialComponents.BottomSheetDialog
        </item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>


    <style name="ShapeAppearanceOverlay.KitabeliAE.CircularImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.KitabeliAE.Toolbar" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppToolBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="elevation">14dp</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/orange50</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>
</resources>